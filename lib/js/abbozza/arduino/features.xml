<?xml version="1.0" encoding="UTF-8"?>
<features>
    
    <!-- The basic features, w/o variables, operations, arrays ... -->
    <feature id="feat.BASE">

        <!-- Basic control structures -->        
        <category id="cat.CTRL">
            <block type="cond_if"></block>
            <block type="cond_if_else"></block>            
            <block type="loop_endless"></block>
            <block type="loop_fixed">
                <value name="COUNT">
                    <block type="math_number"><mutation confirmed="false"/>
                        <field name="VALUE">42</field>
                    </block>
                </value>                   
            </block>
            <block type="loop_while"></block>
            <block type="loop_do_while"></block>
            <block type="loop_break"></block>
            <block type="loop_delay">
                <value name="TIME">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">1000</field></block>
                </value>
            </block>            
            <block type="loop_delay_micros">
                <value name="TIME">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">1000</field></block>
                </value>
            </block>            
            <block type="loop_count_dir">
                <value name="FROM">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
                </value>   
                <value name="TO">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">42</field></block>
                </value>   
            </block>
            <block type="loop_count_dir_step">
                <value name="FROM">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
                </value>   
                <value name="TO">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">42</field></block>
                </value>   
                <value name="STEP">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">1</field></block>
                </value>   
            </block>
        </category>

        <!-- Variables -->        
        <category id="cat.VAR">
            <block type="var_block"></block>
            <block type="var_assign">
                <value name="LEFT">
                    <block type="var_block"></block>
                </value>
            </block>
        </category>
        
        <!-- The basic boolean logic -->
        <category id="cat.LOGIC">
            <block type="logic_const"></block>
            <block type="logic_op"></block>
            <block type="logic_not"></block>
            <block type="logic_compare"></block>
        </category>


        <!-- Integer math -->
        <category id="cat.MATH">
            <block type="math_number"></block>
            <block type="math_calc">
                <value name="LEFT">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
                </value>
                <value name="RIGHT">
                    <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
                </value>                
            </block>
            <block type="math_random">
                <value name="MAX">
                    <block type="math_number"><mutation confirmed="false"/>
                        <field name="VALUE">100</field>
                    </block>
                </value>
            </block>
            <block type="math_random2">
                <value name="MIN">
                    <block type="math_number"><mutation confirmed="false"/>
                        <field name="VALUE">1</field>
                    </block>
                </value>                
                <value name="MAX">
                    <block type="math_number"><mutation confirmed="false"/>
                        <field name="VALUE">50</field>
                    </block>
                </value>                
            </block>
            <block type="math_randomseed">
                <value name="SEED">
                    <block type="math_millis"></block>
                </value>                                
            </block>
            <block type="math_millis"></block>
            <block type="math_micros"></block>
        </category>
        
        <category id="cat.LEDs" name="LEDs">
          <block type="dev_neopixel_step"/>
          <block type="dev_neopixel_rgb">
            <value name="NUMBER">
              <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
            </value>                
            <value name="RED">
              <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
            </value>                
            <value name="GREEN">
              <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
            </value>                
            <value name="BLUE">
              <block type="math_number"><mutation confirmed="false"/><field name="VALUE">0</field></block>
            </value>                
          </block>
          <block type="dev_neopixel_color"/>            
          <block type="dev_neopixel_rred">            
            <value name="STEPS">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">127</field></block>
            </value>                
            <value name="STEP">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">0</field></block>
            </value>                
          </block>
          <block type="dev_neopixel_rgreen">            
            <value name="STEPS">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">127</field></block>
            </value>                
            <value name="STEP">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">0</field></block>
            </value>                
          </block>
          <block type="dev_neopixel_rblue">            
            <value name="STEPS">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">127</field></block>
            </value>                
            <value name="STEP">
              <block type="math_number"><mutation confirmed="true"/><field name="VALUE">0</field></block>
            </value>                
          </block>
        </category>
        
    </feature>
                   
</features>
